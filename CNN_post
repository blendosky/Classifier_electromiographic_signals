#procedemos a separar en gestos 
def sep_gestos(dataframe):
    filas = dataframe.shape[0]
    label = []
    clase = 0
    list_list = []
    for i in range(0,filas):
        if clase != dataframe[i,8]:
            list = []
            clase = dataframe[i,8]
            label.append(clase)
            list_list.append(list) 
        if clase == dataframe[i,8]:
            list.append(dataframe[i,:8])

    return list_list

